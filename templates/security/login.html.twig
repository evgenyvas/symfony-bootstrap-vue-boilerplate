{% extends 'base-common.html.twig' %}

{% block title %}
  {{- parent() ~ ' â€” ' -}}{% trans from 'security' %}Login{% endtrans %}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
<div id="app" class="login-form">
  <div class="card bg-light col-lg-4 offset-lg-4 col-md-6 offset-md-3">
    <div class="card-body px-1 pt-1">
      <h1><span class="h2 mb-3">{% trans from 'security' %}Login{% endtrans %}</span></h1>

      {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}

      <p><span>{% trans from 'security' %}Please fill out the following fields to login{% endtrans %}:</p>

      <div>
        <form method="post" novalidate="novalidate">
          <div class="form-group">
            <label for="inputLogin">{% trans from 'security' %}Username{% endtrans %}</label>
            <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" required autofocus>
          </div>
          <div class="form-group">
            <label for="inputPassword">{% trans from 'security' %}Password{% endtrans %}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
          </div>
          <div class="form-group form-check custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" name="_remember_me" id="inputRememberMe">
            <label class="custom-control-label" for="inputRememberMe">{% trans from 'security' %}Remember Me{% endtrans %}</label>
          </div>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          <button class="btn btn-lg btn-primary" type="submit">{% trans from 'security' %}Log in{% endtrans %}</button>
        </form>
      </div>
    </div>
  </div>
  {{ parent() }}
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('login') }}
{% endblock %}
